<%- include('../layouts/header.ejs')%>

<h1 class="text-center"><%=rooms[0].hotel.name%></h1>
<div class="container-md panel">


<div class="container-md">
<% for(let room of rooms){ %>
    <div class="row mb-4 display-card">
        <div class="col-md-3 IMG">
      <img id="image" src="data:image/png;base64, <%=room.images[0].data%>" alt="Image" class="roomImg">
        </div>
        <div class="col-md-6 DETAILS">
            <h1>Type: <%=room.roomType%></h1>
            <p>Room for: <%=room.maxCount%></p>
        </div>
        <div class="col-md-2">
            <h3>Rs <%=room.rent%></h3>
            <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    View
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel"><%=rooms[0].hotel.name%></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <h1>Type: <%=room.roomType%></h1>
            <p>Room for: <%=room.maxCount%></p>
        </div>

        <div id="carouselExample" class="carousel slide">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="data:image/png;base64, <%= room.images[0].data %>" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="data:image/png;base64, <%= room.images[1].data %>" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="data:image/png;base64, <%= room.images[2].data %>" class="d-block w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        <h3>Price: Rs <%=room.rent %></h3>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <a href="/book/<%=room.id%>">
          <button type="button" class="btn btn-primary">Book Now</button></a>
          <!-- <a class="btn btn-primary" href="/book/<%=room.id%>">Book Now</button> -->
        </div>
      </div>
    </div>
  </div>
        </div>
    </div>
    
    <%}%>


</div>
</div>
<%- include('../layouts/footer.ejs')%>
